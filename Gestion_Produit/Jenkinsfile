pipeline {
    agent {
        docker {
            image "harbor.local:8081/agent/maven-jenkins-agent:v2"
            args "--entrypoint='' -v /var/run/docker.sock:/var/run/docker.sock"
            reuseNode true
        }    
    }

    stages{
        stage('Test agent') {
            steps {
                sh '''
                echo "Docker Info"
                docker info | head -20

                echo "Try pull"
                docker pull harbor.local:8081/agent/maven-jenkins-agent:v2

                '''
            }
        }
    }
}
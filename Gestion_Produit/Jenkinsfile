pipeline {
    agent {
        docker {
            image "harbor.local:8081/agent/maven-jenkins-agent:v2"
            args "--entrypoint='' -u root -v /var/run/docker.sock:/var/run/docker.sock"

            reuseNode true
        }    
    }

    stages{
        stage('Test agent') {
            steps {
                sh '''
                echo "Docker Info"
                docker info | head -20

                '''

        stage ('Pull image') {
            steps{
                docker.withRegistry('http://harbor.local:8081', 'harbor-creds')
                    docker.image('harbor.local:8081/agent/maven-jenkins-agent:v2').pull()

            }
        }
         
            }
        }
    }
}